<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shop_background_gradient"
    tools:context=".ShopActivity">

    <TextView
        android:id="@+id/item5_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buy_button1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="133dp"
        android:layout_marginTop="-198dp"
        android:text="Магазин"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/item2_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buy_button1"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Удвоить урон (100 кристаллов)"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/buy_button1"
        android:layout_width="180dp"
        android:layout_height="87dp"
        android:layout_below="@id/item1_description"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/time"
        android:background="@android:color/transparent"
        />

    <ImageButton
        android:id="@+id/buy_button2"
        android:layout_width="180dp"
        android:layout_height="87dp"
        android:layout_below="@id/item2_description"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/dmg"
        android:background="@android:color/transparent"
        />

    <TextView
        android:id="@+id/item3_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buy_button2"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Пройти босса (500 кристаллов)"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/buy_button3"
        android:layout_width="180dp"
        android:layout_height="87dp"
        android:layout_below="@id/item3_description"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/killboss"
        android:background="@android:color/transparent" />

    <Button
        android:id="@+id/home_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buy_button3"
        android:layout_alignParentStart="true"
        android:layout_marginStart="131dp"
        android:layout_marginTop="110dp"
        android:text="На главную" />

    <TextView
        android:id="@+id/item1_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="111dp"
        android:text="Удвоить время (100 кристаллов)"
        android:textSize="18sp" />

</RelativeLayout>
