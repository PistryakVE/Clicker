<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/boss_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Босс"
        android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/restart_level_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="135dp"
        android:layout_marginTop="127dp"
        android:text="Restart level" />

    <Button
        android:id="@+id/start_game_button"
        android:layout_width="149dp"
        android:layout_height="66dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="129dp"
        android:layout_marginTop="479dp"
        android:text="Start Game" />

    <TextView
        android:id="@+id/health_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Здоровье босса: 100"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/next_boss_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/health_text_view"
        android:layout_alignParentStart="true"
        android:layout_marginStart="146dp"
        android:layout_marginTop="197dp"
        android:text="Next boss"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/defeated_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Босс повержен!"
        android:textSize="18sp"
        android:layout_centerInParent="true"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/level_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="159dp"
        android:layout_marginBottom="35dp"
        android:text="Уровень: 1"
        android:textSize="18sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/timer_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/level_text_view"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="126dp"
        android:layout_marginBottom="569dp"
        android:text="Осталось: 5 секунд"
        android:textSize="18sp"
        android:visibility="invisible" />

</RelativeLayout>
