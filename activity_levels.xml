<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FAFAFA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFEB3B"
        android:padding="8dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/level_1_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Уровень 1"
            android:textSize="18sp"
            android:textColor="#000000"
            android:paddingBottom="8dp" />

        <Button
            android:id="@+id/replay_button_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Играть"
            android:background="@drawable/button_background"
            android:textColor="#FFFFFF"
            android:padding="10dp"
            android:layout_gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FF9800"
        android:padding="8dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/level_2_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Уровень 2"
            android:textSize="18sp"
            android:textColor="#000000"
            android:paddingBottom="8dp" />

        <Button
            android:id="@+id/replay_button_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Играть"
            android:background="@drawable/button_background"
            android:textColor="#FFFFFF"
            android:padding="10dp"
            android:layout_gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FF5722"
        android:padding="8dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/level_3_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Уровень 3"
            android:textSize="18sp"
            android:textColor="#000000"
            android:paddingBottom="8dp" />

        <Button
            android:id="@+id/replay_button_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Играть"
            android:background="@drawable/button_background"
            android:textColor="#FFFFFF"
            android:padding="10dp"
            android:layout_gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#4CAF50"
        android:padding="8dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/level_4_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Уровень 4"
            android:textSize="18sp"
            android:textColor="#000000"
            android:paddingBottom="8dp" />

        <Button
            android:id="@+id/replay_button_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Играть"
            android:background="@drawable/button_background"
            android:textColor="#FFFFFF"
            android:padding="10dp"
            android:layout_gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#2196F3"
        android:padding="8dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/level_5_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Уровень 5"
            android:textSize="18sp"
            android:textColor="#000000"
            android:paddingBottom="8dp" />

        <Button
            android:id="@+id/replay_button_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Играть"
            android:background="@drawable/button_background"
            android:textColor="#FFFFFF"
            android:padding="10dp"
            android:layout_gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#E91E63"
        android:padding="8dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/level_6_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Уровень 6: В разработке..."
            android:textSize="18sp"
            android:textColor="#000000"
            android:paddingBottom="8dp" />
    </LinearLayout>

</LinearLayout>
