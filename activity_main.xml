<!-- activity_main.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background_gradient"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/pass_the_boss_button"
        android:layout_width="108dp"
        android:layout_height="74dp"
        android:layout_below="@id/health_text_view"
        android:layout_alignParentStart="true"
        android:layout_marginStart="288dp"
        android:layout_marginTop="315dp"
        android:text="Пройти босса"
        android:textSize="12sp"
        android:visibility="visible" />

    <ImageButton
        android:id="@+id/boss_button"
        android:layout_width="158dp"
        android:layout_height="158dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="113dp"
        android:layout_marginTop="345dp"
        android:src="@drawable/photo"
        android:background="@android:color/transparent" />


    <Button
        android:id="@+id/shop_button"
        android:layout_width="wrap_content"
        android:layout_height="76dp"
        android:layout_below="@id/health_text_view"
        android:layout_alignParentStart="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="564dp"
        android:text="Магазин"
        android:visibility="visible" />

    <Button
        android:id="@+id/selectlevels_button"
        android:layout_width="114dp"
        android:layout_height="76dp"
        android:layout_below="@id/health_text_view"
        android:layout_alignParentStart="true"
        android:layout_marginStart="282dp"
        android:layout_marginTop="563dp"
        android:text="Уровни"
        android:visibility="visible" />

    <Button
        android:id="@+id/twoatack_button"
        android:layout_width="104dp"
        android:layout_height="73dp"
        android:layout_below="@id/health_text_view"
        android:layout_alignParentStart="true"
        android:layout_marginStart="290dp"
        android:layout_marginTop="227dp"
        android:text="Урон x2"
        android:textSize="12sp"
        android:visibility="visible" />

    <Button
        android:id="@+id/restart_level_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="135dp"
        android:layout_marginTop="127dp"
        android:text="Restart level" />

    <Button
        android:id="@+id/start_game_button"
        android:layout_width="149dp"
        android:layout_height="66dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="119dp"
        android:layout_marginTop="531dp"
        android:text="Start Game" />

    <TextView
        android:id="@+id/health_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="115dp"
        android:layout_marginTop="45dp"
        android:text="Здоровье босса: 100"
        android:textSize="18sp" />

    <Button
        android:id="@+id/next_boss_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/health_text_view"
        android:layout_alignParentStart="true"
        android:layout_marginStart="146dp"
        android:layout_marginTop="197dp"
        android:text="Next boss"
        android:visibility="invisible" />

    <Button
        android:id="@+id/twotime_button"
        android:layout_width="wrap_content"
        android:layout_height="74dp"
        android:layout_below="@id/health_text_view"
        android:layout_alignParentStart="true"
        android:layout_marginStart="290dp"
        android:layout_marginTop="139dp"
        android:text="Время x2"
        android:textSize="12sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/defeated_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="128dp"
        android:layout_marginTop="359dp"
        android:text="Босс повержен!"
        android:textSize="18sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/level_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="128dp"
        android:layout_marginBottom="60dp"
        android:text="Уровень: 1"
        android:textSize="18sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/usileniya_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="311dp"
        android:layout_marginTop="166dp"
        android:text="Усиления"
        android:textSize="14sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/timer_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/level_text_view"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="126dp"
        android:layout_marginBottom="569dp"
        android:text="Осталось: 5 секунд"
        android:textSize="18sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/crystal_count_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/health_text_view"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-58dp"
        android:layout_marginEnd="26dp"
        android:text="Кристаллы: 0"
        android:textSize="18sp" />

</RelativeLayout>
